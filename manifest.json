{
  "manifest_version": 2,
  "name": "Focus",
  "version": "0.0.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Focus",
    "default_popup": "popup/settings.html"
  }
}